<article class="post-item">
  <h2><%= post.title %></h2>
  <p class="post-item-author">By <%= post.author.name%></p>
  <p><%= post.summary %></p>
  <div class="post-actions">
<!-- option 1(with POST request, because POST say that the database change): -->
<form action="/delete-post/<%= post._id %>" method="POST">
  <button class="btn btn-alt">Delete Post</button>
</form>

<!-- option 2 (with GET request): -->
    <!-- <a href="/delete-post/<%= post._id %>" class="btn btn-alt">Delete Post</a> -->
    <a href="/edit-post/<%= post._id %>">Edit Post</a>
    <a class="btn" href="/posts/<%= post._id%>">View Post</a>
  </div>
</article>